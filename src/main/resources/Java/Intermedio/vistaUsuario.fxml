<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="401.0" prefWidth="470.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="vista.VistaUsuario">
   <children>
      <!-- Header azul con título y nombre del usuario -->
      <AnchorPane layoutX="-7.0" layoutY="-1.0" prefHeight="72.0" prefWidth="481.0" style="-fx-background-color: #001D51;">
         <children>
            <Text fill="WHITE" layoutX="160.0" layoutY="32.0" text="BIENVENIDO">
               <font><Font size="29.0" /></font>
               <effect><Glow level="1.0" /></effect>
            </Text>
            <Label fx:id="txtNombreUsuario" layoutX="187.0" layoutY="39.0" text="Nombre del Usuario" textFill="WHITE" />
         </children>
      </AnchorPane>

      <!-- Imagen de usuario -->
      <ImageView fitHeight="57.0" fitWidth="58.0" layoutX="75.0" layoutY="83.0" pickOnBounds="true" preserveRatio="true">
         <image><Image url="@/img/PerfilDef.png" /></image>
      </ImageView>

      <!-- Botones funcionales -->
      <Button fx:id="btnConsultarSaldo" layoutX="35.0" layoutY="160.0" prefWidth="160.0" style="-fx-background-color: #5084A6;" text="Consultar Saldo" textFill="WHITE" />
      <Button fx:id="btnDepositar" layoutX="35.0" layoutY="200.0" prefWidth="160.0" style="-fx-background-color: #5084A6;" text="Depositar" textFill="WHITE" />
      <Button fx:id="btnRetirar" layoutX="35.0" layoutY="240.0" prefWidth="160.0" style="-fx-background-color: #5084A6;" text="Retirar" textFill="WHITE" />
      <Button fx:id="btnRealizarTransaccion" layoutX="35.0" layoutY="280.0" prefWidth="160.0" style="-fx-background-color: #5084A6;" text="Realizar Transacción" textFill="WHITE" />
      <Button fx:id="btnInformeTransacciones" layoutX="35.0" layoutY="320.0" prefWidth="160.0" style="-fx-background-color: #5084A6;" text="Informe Transacciones" textFill="WHITE" />

      <!-- Botón Home -->
      <Button fx:id="btnHome" layoutX="301.0" layoutY="308.0" onAction="#volverHome" style="-fx-background-color: #AD2A2A;" text="Home" textFill="WHITE">
         <effect><Glow /></effect>
      </Button>

      <!-- Logo -->
      <ImageView fx:id="imgLogo1" fitHeight="150.0" fitWidth="148.0" layoutX="260.0" layoutY="131.0" pickOnBounds="true" preserveRatio="true">
         <image><Image url="@/img/logo_azul.png" /></image>
         <effect><Glow level="0.21" /></effect>
      </ImageView>
   </children>
</AnchorPane>
